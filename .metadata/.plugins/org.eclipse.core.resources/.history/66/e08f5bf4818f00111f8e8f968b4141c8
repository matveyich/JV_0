
public enum CompassArrows {

	N(1),E(2),S(3),W(4);
	
	CompassArrows(int value)
	{
		this.setArrow(value);
	}
	
	public int getArrow() {
		return arrow;
	}

	private void setArrow(int arrow) {
		this.arrow = arrow;
	}

	private int arrow;
	
	CompassArrows next(){
		
		this.setArrow(this.getArrow() + 1);
		
		if (this.getArrow()>4){
			return CompassArrows.N;
		}
		
		switch (value) {
		case 2:
			return CompassArrows.E;
		case 3:
			return CompassArrows.S;
		default:
			return CompassArrows.W;
		}
		
	}
	
}
